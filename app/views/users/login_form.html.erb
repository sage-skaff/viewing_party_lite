<h1>Log In</h1>

<%= form_with url: '/login', local: true do |form| %>
  <div>
  <%= form.label "E-Mail Address" %>
  <%= form.text_field :email, required: true %>
  </div>
  <div>
  <%= form.label "Password" %>
  <%= form.password_field :password, required: true %>
  </div>
  <div>
  <%= form.submit "Log In"%>
  </div>
<% end %>
